<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <perspective id="Camera1" near="0.1" far="500" angle="45">
            <from x="19" y="15" z="19" />
            <to x="0" y="2" z="0" />
        </perspective>

        <ortho id="Ortho1" near="0.2" far="100" left="-0.2" right="0.2" top="0.2" bottom="-0.2">
            <from x="10" y="10" z="10" />
            <to x="1" y="1" z="1" />
           
        </ortho>f

        <ortho id="Ortho2"  near="0.1" far="500" left="-5" right="10" top="10" bottom="-5" >
            <from x="0" y="0" z="10" />
            <to x="0" y="0" z="0" />
            <up x="0" y="2" z="0"/>
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="0">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="demoSpot" enabled="1" angle="45" exponent="50">

            <!-- atencao, "target" e' diferente de "direction" -->
            <location x="0" y="0" z="0" w="1.0" />
            <target x="4" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />

        </spot>
        
        <omni id="candeeiro" enabled="0">            <!-- enable/disable -->
            <location x="10" y="19" z="10" w="0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="1" g="1" b="1" a="1.0" />                   <!-- ambient component -->
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />             <!-- diffuse component -->
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />            <!-- specular component -->
        </omni>

    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sandTexture" file="scenes/images/sand.jpg" />
        <texture id="tireTexture" file="scenes/images/tire.jpg"/>
        <texture id="tankTexture" file="scenes/images/tank.jpg" />
        <texture id="gunTexture" file="scenes/images/gun.jpg" />
        <texture id="mastTexture" file="scenes/images/wood.jpg" />
        <texture id="flagTexture" file="scenes/images/flag.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.5" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.5" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="wheelMaterial" shininess="100">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.5" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.5" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1" g="0" b="0.0" a="1.0" />
            <diffuse r="1" g="0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0" b="1" a="1.0" />
            <diffuse r="0" g="0" b="1" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="2" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
            <translate x="0" y="0" z="1" /> 
        </transformation>
        <transformation id="theOtherDemoTransform">
            <translate x="2" y="0" z="1" /> 
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0" x2="0" y2="0" z2="4" x3="0" y3="2" z3="2"/>
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="0.5" slices="50" stacks="50"/>
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="0.5" top="0.5" height="5" slices="16" stacks="8"/>
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.3" outer="0.7" slices="50" loops="50" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>    
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="tank" />
                <componentref id="floor" />
                <componentref id="flag" />
            </children>
        </component>

        <component id="tank">
            <transformation>
                <scale x="0.5" y="0.5" z="0.5" />   
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="box" />
                <componentref id="tower" />
                <componentref id="wheel1" />
                <componentref id="wheel2" />
            </children>
        </component>

        <component id="floor">
            <transformation>
                <rotate angle="-90" axis="x" />
                <rotate angle="-90" axis="z" />
                <scale x="10" y="7" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="sandTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        

        <component id="box">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="front" />
                <componentref id="back" />
                <componentref id="left" />
                <componentref id="right" />
                <componentref id="top" />
                <componentref id="bot" />
            </children>
        </component>

        <component id="front">
            <transformation>
                <translate x="3" y="2.5" z="3" />
                <scale x="3" y="3" z="3" />
                <rotate angle="-90" axis="z" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="back">
            <transformation>
                <translate x="3" y="2.5" z="-3" />
                <scale x="3" y="3" z="3" />
                <rotate angle="-90" axis="z" />
                <rotate angle="180" axis="x" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="left">
            <transformation>
                <translate x="0" y="2.5" z="0" />
                <scale x="3" y="3" z="3" />
                <rotate angle="-90" axis="y" />
                <rotate angle="90" axis="z"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="right">
            <transformation>
                <translate x="6" y="2.5" z="0" />
                <scale x="3" y="3" z="3" />
                <rotate angle="90" axis="y" />
                <rotate angle="90" axis="z"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="top">
            <transformation>
                <translate x="3" y="4.0" z="0" />
                <scale x="3" y="1" z="6" />
                <rotate angle="-90" axis="x" />
                <rotate angle="-90" axis="z" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="bot">
            <transformation>
                <translate x="3" y="1" z="0" />
                <scale x="3" y="1" z="6" />
                <rotate angle="90" axis="x" />
                <rotate angle="-90" axis="z" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="tower">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <componentref id="cannon" />
                <componentref id="body" />
                <componentref id="shoot" />
                <componentref id="sphere" />
            </children>
        </component>

        <component id="body">
            <transformation>
                <translate x="3" y="4" z="0" />
                <scale x="2" y="0.35" z="2" />
                <rotate angle="-90" axis="x"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="cannon">
            <transformation>
                <translate x="3" y="5.1" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="shoot">
            <transformation>
                <translate x="3" y="5.1" z="4.8" />
                <scale x="1.5" y="1.3" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="gunTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="sphere">
            <transformation>
                <translate x="3" y="5.7" z="0" />
                <scale x="1.95" y="1.95" z="1.95" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="wheel1">
            <transformation>
                <translate x="0" y="1" z="0" />
                <scale x="1" y="1.5" z="3" />
                <rotate angle="90" axis="y" />
            </transformation>
            <materials>
                <material id="wheelMaterial" />
            </materials>
            <texture id="tireTexture"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="wheel2">
            <transformation>
                <translate x="6" y="1" z="0" />
                <scale x="1" y="1.5" z="3" />
                <rotate angle="90" axis="y" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tireTexture"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
        <component id="flag">
            <transformation>
                <translate x="5.85" y="4" z="-2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="tankTexture"/>
            <children>
                <componentref id="mast" /> 
                <componentref id="triangleFlag" /> 
            </children>
        </component>
        
        <component id="mast">
            <transformation>
                <translate x="0" y="-4" z="0" />
                <scale x="0.15" y="1.25" z="0.15" />
                <rotate angle="-90" axis="x"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="mastTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
                <componentref id="mastTop" />
            </children>
        </component>
        
        <component id="mastTop">
            <transformation>
                <translate x="0" y="0" z="4.9" />
                <scale x="2" y="2" z="0.25" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="triangleFlag">
            <transformation>
                <translate x="0.01" y="0" z="0" />
                <scale x="1" y="0.5" z="2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="flagTexture"/>
            <children>
                <componentref id="triangleFlag1" /> 
                <componentref id="triangleFlag2" /> 
            </children>
        </component>
        <component id="triangleFlag1">
            <transformation>
                <rotate angle="-90" axis="x"/>
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="red" />
                <material id="blue"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>
        <component id="triangleFlag2">
            <transformation>
                <translate x="0" y="4" z="0"/>
                <rotate angle="-90" axis="x"/>
                <rotate angle="180" axis="y"/>
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="red" />
                <material id="blue"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>
    </components>
</sxs>