<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.5" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.5" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="2" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
            <translate x="0" y="0" z="1" /> 
        </transformation>
        <transformation id="theOtherDemoTransform">
            <translate x="2" y="0" z="1" /> 
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="2" y1="0" z1="0" x2="0" y2="2" z2="0" x3="0" y3="0" z3="2"/>
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="0.5" slices="50" stacks="50"/>
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="0.5" top="0.5" height="5" slices="16" stacks="8"/>
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.3" outer="0.7" slices="50" loops="50" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>    
            </transformation>
            <materials>
                <material id="demoMaterial"/>
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="tank" />
            </children>
        </component>

        <component id="tank">
            <transformation>   
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="box" />
                <componentref id="tower" />
                <componentref id="wheel1" />
                <componentref id="wheel2" />
            </children>
        </component>

        <component id="box">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="front" />
                <componentref id="back" />
                <componentref id="left" />
                <componentref id="right" />
                <componentref id="top" />
                <componentref id="bot" />
            </children>
        </component>

        <component id="front">
            <transformation>
                <translate x="3" y="1.2" z="3" />
                <scale x="3" y="3" z="3" />
                <rotate angle="-90" axis="z" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="back">
            <transformation>
                <translate x="3" y="1.2" z="-3" />
                <scale x="3" y="3" z="3" />
                <rotate angle="-90" axis="z" />
                <rotate angle="180" axis="x" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="left">
            <transformation>
                <translate x="0" y="1.2" z="0" />
                <scale x="3" y="3" z="3" />
                <rotate angle="-90" axis="y" />
                <rotate angle="90" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="right">
            <transformation>
                <translate x="6" y="1.2" z="0" />
                <scale x="3" y="3" z="3" />
                <rotate angle="90" axis="y" />
                <rotate angle="90" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="top">
            <transformation>
                <translate x="3" y="2.7" z="0" />
                <scale x="3" y="1" z="6" />
                <rotate angle="-90" axis="x" />
                <rotate angle="-90" axis="z" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="bot">
            <transformation>
                <translate x="3" y="-0.3" z="0" />
                <scale x="3" y="1" z="6" />
                <rotate angle="90" axis="x" />
                <rotate angle="-90" axis="z" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>


        <component id="tower">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="cannon" />
                <componentref id="body" />
                <componentref id="shoot" />
                <componentref id="sphere" />
            </children>
        </component>

        <component id="body">
            <transformation>
                <translate x="3" y="2.5" z="0" />
                <scale x="2" y="0.5" z="2" />
                <rotate angle="-90" axis="x"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="cannon">
            <transformation>
                <translate x="3" y="3.6" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="shoot">
            <transformation>
                <translate x="3" y="3.6" z="4.8" />
                <scale x="1.5" y="1.3" z="0.4" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="sphere">
            <transformation>
                <translate x="3" y="4.8" z="0" />
                <scale x="1.95" y="1.95" z="1.95" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="wheel1">
            <transformation>
                <translate x="0" y="-0.3" z="0" />
                <scale x="1" y="1.5" z="3" />
                <rotate angle="90" axis="y" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="wheel2">
            <transformation>
                <translate x="6" y="-0.3" z="0" />
                <scale x="1" y="1.5" z="3" />
                <rotate angle="90" axis="y" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
    </components>
</sxs>